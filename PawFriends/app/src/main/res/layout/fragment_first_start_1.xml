<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.sgd.pawfriends.StartActivity$StartScreen1Fragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/start_image_1" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/start_layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/semi_transparent_layout">


        <TextView
            android:id="@+id/txt_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextTitle"
            android:textSize="34sp"
            android:text="@string/welcome"
            android:fontFamily="sans-serif-light"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/margin_left_8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/margin_top_custom"
            android:layout_marginStart="@dimen/margin_start_8dp"
            android:layout_marginEnd="@dimen/margin_end_8dp"
            android:layout_marginRight="@dimen/margin_right_8dp"
            app:layout_constraintRight_toRightOf="@+id/textView5"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/textView5"
            android:textColor="@color/colorTextDescription"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="@dimen/height_custom_209dp"
            android:layout_marginEnd="@dimen/margin_end_8dp"
            android:layout_marginLeft="@dimen/margin_left_8dp"
            android:layout_marginRight="@dimen/margin_right_8dp"
            android:layout_marginStart="@dimen/margin_start_8dp"
            android:layout_marginTop="@dimen/margin_top_16dp"
            android:text="@string/welcome_description"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_welcome"
            app:layout_constraintHorizontal_bias="0.0" />

        <ImageButton
            android:id="@+id/btn_first_launch1"
            android:layout_width="@dimen/width_48dp"
            android:layout_height="@dimen/height_48dp"
            style="@style/SelectableItemBackground"
            app:srcCompat="@drawable/ic_done"
            android:layout_marginTop="@dimen/margin_top_8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginLeft="@dimen/margin_left_8dp"
            android:layout_marginStart="@dimen/margin_start_8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="@dimen/margin_right_8dp"
            android:layout_marginEnd="@dimen/margin_end_8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/margin_bottom_0dp"
            app:layout_constraintVertical_bias="0.5" />


    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
